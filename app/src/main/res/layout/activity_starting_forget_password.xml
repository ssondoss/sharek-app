<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartingForgetPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text=" قم بإدخال رقمك الوطني:"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="normal"
             />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nationalNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:layout_marginHorizontal="40dp"
                android:gravity="right"
                android:hint="رقمك الوطني"
                android:inputType="number"
                android:maxLength="10"
            android:textSize="17sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/cancelChangePasswordButton"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_marginHorizontal="25dp"
                android:layout_weight="1"
                android:background="@drawable/primary_borders"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close"/>
            <TextView
                android:layout_width="31dp"
                android:layout_height="wrap_content"
                android:textColor="#E33030"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="إلغاء"
                android:background="#00000000"
                android:src="@drawable/ic_cancel" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/stratingChangePasswordButton"
                android:gravity="center"
                android:layout_marginHorizontal="25dp"
                android:background="@drawable/border_green"
                android:layout_weight="1"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_check_home"/>
                <TextView
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:gravity="center"
                    android:text="تأكيد"
                    android:textColor="#26972A"
                    android:textSize="18sp"
                    android:textStyle="bold" />


        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>